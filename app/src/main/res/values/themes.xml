<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ascent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline2">@style/Theme.AppOnboarding.Title</item>
        <item name="textAppearanceSubtitle1">@style/Theme.AppOnboarding.Description</item>
        <item name="textAppearanceSubtitle2">@style/Theme.AppProfile.parameter</item>

    </style>
    <!-- стиль экран приветствия-->
    <style name="Theme.AppOnboarding.Title" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.AppOnboarding.Description" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- стиль для названий параметров профиля -->
    <style name="Theme.AppProfile.parameter" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B5B5B5</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">right</item>
    </style>
    <!-- дивидеры -->
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- Toolbar -->
    <style name="ToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ToolBarTheme</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationStyle</item>
    </style>

    <style name="ToolbarNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
       <item name="tint">@android:color/white</item>
    </style>
    <style name="Theme.Ascent.Launcher">
       <item name="android:windowBackground">@drawable/ic_logo</item>
    </style>
</resources>